{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h4>
      <a href="/post/{{id}}">{{title}}</a>
    </h4>
    <p>Posted by {{user.name}} on {{format_date createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{contents}}
    </p>
  </div>
</div>
{{/each}}
