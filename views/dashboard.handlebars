<div class="row">
  <div class="col-auto">
    <h5>Welcome, {{name}}!</h5>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 project-list">
    <h3>Past Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="./js/dashboard.js"></script>
